<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".AddStudentFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:padding="5dp"
        app:cardCornerRadius="15dp"
        app:cardMaxElevation="3dp"
        app:cardUseCompatPadding="true"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText_name_stdAdd_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Student name"
                android:inputType="text"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_roll_stdAdd_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Student Roll"
                android:layout_marginTop="8dp"
                android:inputType="number"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_total_stdAdd_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Student Total"
                android:layout_marginTop="8dp"
                android:inputType="number"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_class_stdAdd_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="student class name"
                android:layout_marginTop="8dp"
                android:inputType="text"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/editText_address_stdAdd_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Student Address"
                android:layout_marginTop="8dp"
                android:inputType="text"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editText_classText_stdAdd_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    android:text="Enter YOur class"/>

                <Spinner
                    android:id="@+id/editText_spinner_stdAdd_id"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#673AB7"
                    android:textSize="24sp"
                    android:textStyle="bold" />




            </LinearLayout>




        </LinearLayout>



    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/button_stdAdd_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Student Info"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        style="@style/Widget.AppCompat.Button.Colored"/>


    <Button
        android:id="@+id/button_stdUp_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Update Student Info"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#fff"
        android:visibility="gone"
        style="@style/Widget.AppCompat.Button.Colored">


    </Button>




</LinearLayout>